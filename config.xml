    id          = "com.phonegap.example"
    versionCode = "10"
    version     = "1.0.0" >
  <!-- nome della app -->
  <name>Pitagorapp</name>
  <!-- descrizione -->
  <description>
      App per i calcoli sul triangolo rettangolo con il Teorema di Pitagora
       costruita con HTML5, Skeleton CSS e Javascript
  </description>
  <!-- autore -->
  <author href="https://build.phonegap.com">
      Alessandro Visigalli
  </author>
  <!-- piattaforma di riferimento ed icona della app -->
    <platform name="android">
              <icon src="images/icon.png" density="ldpi" />
              <icon src="images/icon.png" density="mdpi" />
              <icon src="images/icon.png" density="hdpi" />
              <icon src="images/icon.png" density="xhdpi" />
     </platform>
   
   </icon>
